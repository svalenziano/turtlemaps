{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
  },
  "include": ["./src/**/*"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "ts-node": {
    "esm": true,
  }
}